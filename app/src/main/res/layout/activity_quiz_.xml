<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Quiz_Activity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/editprofileback_btn"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/item_nametext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_weight="6"
            android:fontFamily="@font/lato_black"
            android:gravity="center|left"
            android:text=""
            android:textColor="@color/white"
            android:textSize="22dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_one"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Question"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_background_blue"/>

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_background_blue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:textColor="@color/white"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_background_blue"/>

            <Button
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 4"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_background_blue"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_two"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/two_question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Question"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"
            android:textSize="32dp"
            tools:layout_editor_absoluteX="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/two_option1"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_background_blue"/>

            <Button
                android:id="@+id/two_option2"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:textColor="@color/white"
                android:background="@drawable/bg_background_blue"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/two_option3"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 3"
                android:textColor="@color/white"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_background_blue"/>

            <Button
                android:id="@+id/two_option4"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Option 4"
                android:textColor="@color/white"
                android:background="@drawable/bg_background_blue"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/next_btn"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/questionnotext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question 1/10"
            android:textSize="30dp"
            android:textColor="@color/textcolour"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textcolour"
            android:gravity="center"
            android:text="................................................................................................."
            />

        <TextView
            android:id="@+id/questiontext"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="What attraction in Montreal is one of the largest in thw World?"
            android:textColor="@color/textcolour"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>

        <RadioGroup
            android:id="@+id/radiogroup2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RadioButton
                android:id="@+id/radiooption11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Botanical Gardens"
                android:textColor="@color/textcolour"
                android:textSize="20dp"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/radiooption21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Science Museum"
                android:textColor="@color/textcolour"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/radiooption31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The Olympic Stadium"
                android:textColor="@color/textcolour"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:padding="15dp"/>

            <RadioButton
                android:id="@+id/radiooption41"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/textcolour"
                android:text="The Olympic Stadium"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:padding="15dp"/>

        </RadioGroup>

    </LinearLayout>



    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Next"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>